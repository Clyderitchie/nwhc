generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id           String    @id
  username     String    @unique
  email        String?   @unique
  passwordHash String?
  createdAt    DateTime  @default(now())
  Session      Session[]

  @@map("admins")
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model Band {
  id                 String   @id @default(cuid())
  bandName           String
  bandPic            String?
  bandOrigin         String
  bandActive         Boolean
  bandYearsActive    String
  bandBio            String
  createdAt          DateTime @default(now())
  show               Show[]
  link               Link[]

  @@map("bands")
}

model Show {
  id           String   @id @default(cuid())
  bandId       String?
  showName     String
  flyerLink    String
  showInfo     String
  showLocation String
  showTime     String
  createdAt    DateTime @default(now())
  band         Band?    @relation(fields: [bandId], references: [id])
  link         Link[]

  @@map("shows")
}

model Link {
  id           String  @id @default(cuid())
  bandId       String?
  showId       String?
  appleMusic   String?
  spotifyMusic String?
  bandCamp     String?
  twitter      String?
  instagram    String?
  shop         String?

  band Band? @relation(fields: [bandId], references: [id])
  show Show? @relation(fields: [showId], references: [id])

  @@map("links")
}
